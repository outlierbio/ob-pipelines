{
    "jobDefinitionName": "samtools-sort-by-coord",
    "type": "container",
    "containerProperties": {
        "image": "outlierbio/samtools",
        "vcpus": 8,
        "memory": 50000,
        "command": [
            "samtools",
            "sort",
            "-m", "8G",
            "-o", "Ref::output",
            "-T", "Ref::tmp_prefix",
            "-@", "4",
            "Ref::input"
        ],
        "environment": [
            {
                "name": "SCRATCH_DIR",
                "value": "/scratch"
            }
        ],        
        "mountPoints": [
            {
                "containerPath": "/scratch",
                "readOnly": false,
                "sourceVolume": "scratch"
            }
        ],
        "volumes": [
            {
                "name": "scratch",
                "host": {
                    "sourcePath": "/mnt/scratch"
                }
            }
        ]
    }
}